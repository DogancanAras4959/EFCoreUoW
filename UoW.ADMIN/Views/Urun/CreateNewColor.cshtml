@model UoW.DOMAIN.Models.Renk

@{
    ViewData["Title"] = "CreateNewColor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" type="text/css">
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Renk Oluştur</h4>
                        <p class="card-title-desc">
                            Ürünlerin için Renklerini oluştur
                        </p>
                        <form method="post" id="create_color" action="@Url.Action("CreateColorForProduct","Urun")">
                            <div class="form-group">
                                <input class="form-control" name="RenkAdi" placeholder="Renk adı giriniz(Zorunlu Değildir)." />
                            </div>
                            <div class="form-group">
                                <label>Rengini seç</label>
                                <div class="input-group colorpicker-default" title="Using format option">
                                    <input type="text" class="form-control input-lg" name="RenkKodu" value="#4667cc" />
                                    <span class="input-group-append">
                                        <span class="input-group-text colorpicker-input-addon"><i></i></span>
                                    </span>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block btn-sm" type="submit">Rengi Oluştur</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/libs/select2/js/select2.min.js"></script>
    <script src="~/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/assets/js/pages/form-advanced.init.js"></script>

    <script type="text/javascript">

        ('create_color').submit(function (e) {

            e.preventDefault();
            var dataForm = $(this);
            var url = form.attr('action');

            $.ajax({
                url: url,
                type: "POST",
                dataType: 'json',
                contentType: 'application/x-www-form-urlencoded; charset=UTF-8',
                data: dataForm.serialize(),
                success: function (data) {
                    alert(data);
                }
            });

        });

    </script>

}