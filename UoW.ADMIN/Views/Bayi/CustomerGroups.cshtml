@using UoW.DOMAIN.Models
@model IEnumerable<UoW.DOMAIN.Models.MusteriGrubu>

@{
    ViewData["Title"] = "CustomerGroups";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    MusteriGrubu customerGroup = new MusteriGrubu();
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">MÜŞTERİ GRUPLARI</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">Müşteri Grupları</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            @foreach (var item in Model)
            {
                customerGroup.ID = item.ID;
                customerGroup.GrubAdi = item.GrubAdi;
                customerGroup.Durum = item.Durum;
                <div class="col-xl-4 col-sm-6">
                    <div class="card">
                        <div class="row">
                            <div class="col-xl-5">
                                <div class="text-center p-4 border-right">
                                    <div class="avatar-sm mx-auto mb-0 mt-4">
                                        <span class="avatar-title rounded-circle bg-soft-primary text-primary font-size-16">
                                            <img src="https://admin.kiracelektrik.com.tr//files/uploads/profil/@item.GrupIcon" width="100" />
                                        </span>
                                    </div>                                  
                                </div>
                            </div>

                            <div class="col-xl-7">
                                <div class="p-4 text-center text-xl-left">
                                   <div class="row">
                                       <div class="col-sm-12">
                                           <h5>@item.GrubAdi</h5>
                                       </div>
                                   </div>
                                    <div class="row">
                                        <div class="col-sm-6">
                                            <div>
                                                <p class="text-muted mb-2 text-truncate">İskonto</p>                                           
                                                <h5>%@item.IskontoOrani</h5> 
                                            </div>
                                        </div>
                                        <div class="col-sm-6">
                                            <div>
                                                <p class="text-muted mb-2 text-truncate">Durum</p>
                                                @if (item.Durum == true)
                                                {<h5 style="color:forestgreen">Atkif</h5> }
                                                else
                                                { <h5 style="color:red">Pasif</h5>}
                                            </div>
                                        </div>
                                    </div>
                                 
                                </div>

                            </div>
                        </div>                        
                        <div class="row" style="padding:30px; margin-left:4px;">
                                <div class="col-sm-3">
                                    <a href="@Url.Action("SellerByIdGroup", "Bayi", new { ID = item.ID})">Detay</a>
                                </div>
                                @if (item.Durum == false)
                                {
                                    <div class="col-sm-3">
                                        <a style="color:green;" data-toggle="tooltip" data-placement="top" title="" data-original-title="Aktifleştir" href="@Url.Action("EditStatusCustomerGroup", "Bayi", new { ID = item.ID })">Aktİf</a>
                                    </div>

                                }
                                else
                                {
                                    <div class="col-sm-3">
                                        <a style="color:red;" data-toggle="tooltip" data-placement="top" title="" data-original-title="Pasifleştir" href="@Url.Action("EditStatusCustomerGroup", "Bayi", new { ID = item.ID })">Pasif</a>
                                    </div>
                                }
                                <div class="col-sm-3">
                                    <a href="@Url.Action("EditCustomerGroup","Bayi", new { ID= item.ID })" class="btn btn-sm btn-rounded btn-primary">Düzenle</a>
                                </div>
                                <div class="col-sm-3">
                                    <a href="@Url.Action("RemoveCustomerGroup","Bayi", new { ID= item.ID })" class="btn btn-sm btn-rounded btn-danger">Sil</a>
                                </div>
                            </div>             
                    </div>
                </div>
            }
        </div>
    </div>
</div>