<script>
    $('.slick-table').slick({
        dots: true,
        infinite: false,
        speed: 300,
        slidesToShow: 12,
        slidesToScroll: 12,
        responsive: [
            {
                breakpoint: 1024,
                settings: {
                    slidesToShow: 4,
                    slidesToScroll: 4,
                    infinite: true,
                    dots: true
                }
            },
            {
                breakpoint: 600,
                settings: {
                    slidesToShow: 3,
                    slidesToScroll: 3
                }
            },
            {
                breakpoint: 480,
                settings: {
                    slidesToShow: 2,
                    slidesToScroll: 2
                }
            }

        ]
    });
    var InsertSepet = function (ID) {
        var Adet = $("#" + ID + "_adet").val();
        var fiyat = $("#" + ID + "_fiyat").val();
        var remove = true;
        console.log(Adet, fiyat);
        $.ajax({
            type: "POST",
            url: "/Siparis/SepeteEkle/",
            data: { id: ID, Adet: Adet, fiyat: fiyat, remove: remove },
            success: function (response) {
                if (response == true) {
                      window.location.assign('@Url.Action("Basket","Siparis")');
                }
            }
        });
    }

</script>