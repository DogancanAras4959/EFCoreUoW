@model UoW.DOMAIN.Models.Yetkililer
@{
    ViewData["Title"] = "SellerCompetentInsert";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">YETKİLİ OLUŞTUR</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item active">Yetkili Oluştur</li>
                        </ol>
                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-8 col-xl-8">
                        <div class="card overflow-hidden">
                            <div class="card-body pt-3">
                                <div class="p-3">
                                    <h4 class="card-title">Yetkili oluştur!</h4>
                                    <p class="card-title-desc">
                                        Yetkili oluşturmak istiyorsanız aşağıda istenilen bilgileri eksiksiz doldurun!
                                    </p>                         
                                        @using (Html.BeginForm("SellerCompetentInsert", "Islem", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Yetkili Fotosu Logosu</label>
                                                <div class="col-md-10">
                                                    <div class="custom-file">
                                                        <input type="file" class="custom-file-input" accept="image/*" name="file" id="customFile">
                                                        <label class="custom-file-label" for="customFile">Yetkili Fotosu Seçin</label>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Yetkili Adı</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.YetkiliAdi, new { @class = "form-control", maxlength = "50", id = "username", autocomplete = "off", placeholder = "Yetkili adı giriniz..." })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Telefon Numarası</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.TelNo, new { @class = "form-control", maxlength = "20", id = "username", autocomplete = "off", placeholder = "Telefon Numarası giriniz..." })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Email Adresi</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", maxlength = "50", id = "username", autocomplete = "off", placeholder = "Email Adresi giriniz..." })
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <button id="btn_insert" onclick="insert_yetkili()" class="btn btn-primary btn-block waves-effect waves-light" type="submit">Yetkili Oluştur</button>
                                            </div>
                                        }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script>
        function insert_yetkili() {
            var btn = document.getElementById("btn_insert");
            btn.innerText = "Yetkili Oluşturuluyor...";
        }
    </script>
}