@model UoW.DOMAIN.Models.Haber
@{
    ViewData["Title"] = "DetailsNews";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">@Model.HaberAdi</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">Detay</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel">
                            <div class="carousel-inner" role="listbox">
                                <div class="carousel-item active">
                                    <img class="d-block img-fluid" src="https://bayi.kiracelektrik.com.tr/Files/Bayi/@Model.HaberFoto">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
           
        </div> 
        <div class="row">
            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">
                        <h5><span style="font-weight:600;">Haber No: @Model.ID</span></h5>
                        <h5>@Model.kategori.HaberKategoriAdi</h5>
                        <hr />
                        <h5>@Model.HaberSpot</h5>
                        <hr />
                        <p>@Html.Raw(Model.Icerik)</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>