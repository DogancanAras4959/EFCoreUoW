@model UoW.DOMAIN.Models.MusteriGrubu

@{
    ViewData["Title"] = "SellerByIdGroup";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">@Model.GrubAdi BAYİLER</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">@Model.GrubAdi Bayiler</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Yetkiler</h4>
                        <p class="card-title-desc"></p>
                        <div class="table table-centered table-nowrap mb-0"></div>
                        <table class="table mb-0">
                            <thead class="thead-light">
                                <tr>
                                    <th></th>
                                    <th>#</th>
                                    <th>Üye Numarası</th>
                                    <th>Bayi Adı</th>
                                    <th>Risk Limiti</th>
                                    <th>Ödeme Şekli</th>
                                    <th>Güncellenme</th>
                                    <th>Eklenme</th>
                                    <th>Durum</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.bayiMusteriGrublari)
                                {
                                <tr>
                                    <td><img src="https://admin.kiracelektrik.com.tr//files/uploads/profil/@item.Logo" class="rounded-circle" width="40" /></td>
                                    <td class="text-body font-weight-bold">#@item.ID</td>
                                    <td>@item.UyeNo</td>
                                    <td>@item.BayiAdi</td>
                                    <td>
                                        @item.RiskLimiti
                                    </td>
                                    <td>
                                        @item.odeme.Odeme
                                    </td>

                                    <td>@item.GuncellenmeTarih.ToShortDateString()</td>
                                    <td>@item.EklenmeTarih.ToShortDateString()</td>

                                    <td>
                                        @if (item.AktifMi == true)
                                        {<span class="badge badge-pill badge-soft-success font-size-12">Aktif</span>}
                                        else
                                        { <span class="badge badge-pill badge-soft-danger font-size-12">Pasif</span>}
                                    </td>

                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="table table-centered table-nowrap mb-0"></div>

