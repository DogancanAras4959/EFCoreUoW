@model IEnumerable<UoW.DOMAIN.Models.DokumanTipi>

@{
    ViewData["Title"] = "DocumentTypeList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">DÖKÜMAN TİPLERİ</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li>
                                <a href="@Url.Action("InsertDocumentType","Document")" class="btn btn-success btn-rounded waves-effect waves-light mb-2 mr-2">Döküman Tipi Oluştur</a>
                            </li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-body">
                        <table class="table table-bordered dt-responsive nowrap"
                               style="border-collapse: collapse;
                       border-spacing: 0; width: 100%;">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Döküman Tipi</th>
                                    <th>Pozisyon</th>
                                    <th>Durum</th>
                                    <th>Detay İşl.</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>

                            <tbody>
                                @foreach (var item in Model)
                                {

                                    <tr>
                                        <td class="text-body font-weight-bold">#@item.ID</td>
                                        <td>@item.TipAdi</td>
                                        <th>@item.Pozisyon</th>
                                        <td>
                                            @if (item.Durum == true)
                                            {<span class="badge badge-pill badge-soft-success font-size-12">Aktif</span> }
                                            else
                                            { <span class="badge badge-pill badge-soft-danger font-size-12">Pasif</span>}
                                        </td>
                                        <td>
                                            @if (item.Durum == true)
                                            {
                                                <a href="@Url.Action("EditStatusDocumentType","Document", new { ID = item.ID })" class="btn btn-warning btn-sm btn-rounded waves-effect waves-light">Pasifleştir</a>
                                            }
                                            else
                                            {
                                                <a href="@Url.Action("EditStatusDocumentType","Document", new { ID = item.ID })" class="btn btn-success btn-sm btn-rounded waves-effect waves-light">Aktifleştir</a>
                                            }
                                        </td>
                                        <td>
                                            <a href="@Url.Action("UpdateDocumentType","Document", new { ID = item.ID })" class="mr-3 text-primary" data-toggle="tooltip" data-placement="top" title="" data-original-title="Düzenle"><i class="mdi mdi-pencil font-size-18"></i></a>
                                            <a href="#" data-toggle="modal" data-target="#model_@item.ID" class="text-danger" data-placement="top" title="" data-original-title="Sil"><i class="mdi mdi-close font-size-18"></i></a>
                                            <div id="model_@item.ID" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
                                                <div class="modal-dialog">
                                                    <div class="modal-content">
                                                        <div class="modal-header">
                                                            <h5 class="modal-title mt-0" id="myModalLabel">#@item.ID - @item.TipAdi</h5>
                                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                                <span aria-hidden="true">×</span>
                                                            </button>
                                                        </div>
                                                        <div class="modal-body">
                                                            Bu döküman tipini sistemden kaldırmak istediğinize emin misiniz?
                                                        </div>
                                                        <div class="modal-footer">
                                                            <a href="javascript::void(0);" class="btn btn-secondary waves-effect" data-dismiss="modal">İptal</a>
                                                            <a href="@Url.Action("RemoveDocumentType","Document", new { ID = item.ID })" class="btn btn-primary waves-effect waves-light">Döküman Tipini Sil</a>
                                                        </div>
                                                    </div><!-- /.modal-content -->
                                                </div><!-- /.modal-dialog -->
                                            </div>

                                        </td>

                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

