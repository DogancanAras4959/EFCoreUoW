@model UoW.DOMAIN.Models.Cuzdan
@{
    ViewData["Title"] = "CreateWallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Cüzdanımı Düzenle</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("SellerDetail","Bayi",new { ID = ViewBag.ID })">Bayi Hesabı</a></li>
                            <li class="breadcrumb-item active">Cüzdan Düzenle</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-3"></div>
        </div>
        <div class="col-sm-6">
            @using (Html.BeginForm("CreateWallet", "Bayi", FormMethod.Post))
            {
                <div class="form-group">
                    @Html.TextBoxFor(x => x.Bakiye, new { @class = "form-group", maxlength = "35", id = "username", autocomplete = "off", placeholder = "Bakiyenizi girin..." })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.CuzdanNo, new { @class = "form-group", maxlength = "35", id = "username", autocomplete = "off", placeholder = "Cüzdan Numarası..." })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(x => x.CuzdanTipi, new { @class = "form-group", maxlength = "35", id = "username", autocomplete = "off", placeholder = "Cüzdan Tipi..." })
                </div>
                <div class="form-group">
                    <button id="btn_edit" onclick="edit_cuzdan()" type="submit" class="btn btn-sm btn-success">Cüzdanı Güncelle</button>
                </div>
            }
        </div>
        <div class="col-sm-3"></div>
    </div>


<script>
    function edit_cuzdan() {
        var btn = document.getElementById("btn_edit");
        btn.innerText = "Cüzdan Güncelleniyor...";
    }
</script>
