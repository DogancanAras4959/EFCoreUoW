@model UoW.ADMIN.Models.BayiVM.SellerInsertVM
@{
    ViewData["Title"] = "InsertSeller";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">BAYİ OLUŞTUR</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Ana Sayfa</a></li>
                            <li class="breadcrumb-item active">Bayi Oluştur</li>
                        </ol>
                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-12 col-lg-10 col-xl-9">
                        <div class="card overflow-hidden">
                            <div class="card-body pt-3">
                                <div class="p-3">
                                    <h4 class="card-title">Bayi oluşturun!</h4>
                                    <p class="card-title-desc">
                                        Bayi oluşturma işleminde istenilen alanları doldurduktan sonra, bayiyi oluşturabilirsiniz.
                                    </p>

                                    @using (Html.BeginForm("SellerInsert", "Bayi", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-md-2 col-form-label">Bayi Logosu</label>
                                            <div class="col-md-10">
                                                <div class="custom-file">
                                                    <input type="file" class="custom-file-input" accept="image/*" name="file" id="customFile">
                                                    <label class="custom-file-label" for="customFile">Bayi Logosu Seçin</label>
                                                </div>
                                            </div>
                                        </div>

                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-md-2 col-form-label">Bayi Adı</label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(x => x.BayiAdi, new { @class = "form-control", maxlength = "70", id = "member", autocomplete = "off", placeholder = "Bayi adı giriniz..." })
                                                <label class="text-danger">@Html.ValidationMessageFor(x => x.BayiAdi)</label>
                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-md-2 col-form-label">Üye Numarası</label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(x => x.UyeNo, new { @class = "form-control", maxlength = "50", id = "memberno", autocomplete = "off", placeholder = "Üye Numarası giriniz..." })
                                                <label class="text-danger">@Html.ValidationMessageFor(x => x.UyeNo)</label>

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-md-2 col-form-label">Risk Limiti</label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(x => x.RiskLimiti, new { @class = "form-control", maxlength = "20", id = "limit", autocomplete = "off", placeholder = "Kredi Limitinizi belirtin..." })
                                                <label class="text-danger">@Html.ValidationMessageFor(x => x.RiskLimiti)</label>

                                            </div>
                                        </div>
                                        <div class="form-group row">
                                            <label for="example-text-input" class="col-md-2 col-form-label">Kullanıcı Adı</label>
                                            <div class="col-md-10">
                                                @Html.TextBoxFor(x => x.KullaniciAdi, new { @class = "form-control", maxlength = "50", id = "user", autocomplete = "off", placeholder = "Kullanıcı adı giriniz..." })
                                                <label class="text-danger">@Html.ValidationMessageFor(x => x.KullaniciAdi)</label>

                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="username">Şifre</label>
                                                    @Html.TextBoxFor(x => x.Sifre, new { @class = "form-control", maxlength = "25", id = "password", type = "password", placeholder = "Şifre giriniz..." })
                                                    <label class="text-danger">@Html.ValidationMessageFor(x => x.Sifre)</label>

                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="username">Şifre</label>
                                                    @Html.TextBoxFor(x => x.SifreTekrar, new { @class = "form-control", maxlength = "25", id = "repassword", type = "password", placeholder = "Şifre giriniz..." })
                                                    <label class="text-danger">@Html.ValidationMessageFor(x => x.SifreTekrar)</label>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="username">Ödeme Şekli</label>
                                                    @Html.DropDownList("OdemeID", (SelectList)ViewBag.OdemeID, "Ödeme Türü Seçiniz", new { @class = "form-control", id = "OdemeID" })
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="username">Grup Seçiniz</label>
                                                    @Html.DropDownList("BayiGrubuID", (SelectList)ViewBag.BayiGrubuID, "Müşteri Grubu Seçiniz", new { @class = "form-control", id = "BayiGrubuID" })
                                                </div>

                                            </div>
                                            <div class="col-md-4">
                                                <div class="form-group">
                                                    <label for="username">Kargo Seçiniz</label>
                                                    @Html.DropDownList("KargoFirmaID", (SelectList)ViewBag.KargoFirmaID, "Kargonuzu Seçiniz", new { @class = "form-control", id = "KargoFirmaID" })
                                                </div>

                                            </div>
                                        </div>
                                        <div class="mt-3">
                                            <button id="btn_insert" onclick="insert_bayi()" class="btn btn-primary btn-block waves-effect waves-light" type="submit">Bayi Oluştur</button>
                                        </div>

                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/assets/js/pages/form-element.init.js"></script>
    <script>
        $(document).ready(function () {
            setTimeout(function () {
                $('label[class=text-danger]').delay(500).fadeOut();
            }, 3000);
        });
        function insert_bayi() {
            window.setTimeout(function () {
                $("#btn_insert").attr("disabled", true);
            }, 500);
            var btn = document.getElementById("btn_insert");
            btn.innerText = "Bayi Oluşturuluyor...";
        }
    </script>
}