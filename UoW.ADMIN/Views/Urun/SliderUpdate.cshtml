@model UoW.DOMAIN.Models.Slider
@{
    ViewData["Title"] = "InsertCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">Kampanya Güncelle</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">Kampanya Güncelle</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-9">
                <div class="card overflow-hidden">
                    <div class="card-body pt-3">
                        <div class="p-3">
                            <h4 class="card-title">Kampanyayı Güncelleyin</h4>
                            <p class="card-title-desc">
                                Kampanyalarınızı daha rahat yönetmek ve kullanmak için güncelleyin
                            </p>
                            <div class="p-2">
                                    @using (Html.BeginForm("SliderUpdate", "Urun", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                    {
                                        <div class="form-group">
                                            <label for="username">Önizleme Fotosu</label>
                                            <div class="custom-file">
                                                <input type="file" class="custom-file-input" accept="image/*" name="image" id="customFile">
                                                <label class="custom-file-label" for="customFile">Fotonuzu seçin</label>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label for="username">Kampanya Adı</label>
                                            @Html.TextBoxFor(x => x.SliderName, new { @class = "form-control", maxlength = "100", id = "username", autocomplete = "off", placeholder = "Kampanya adı giriniz..." })
                                        </div>

                                        <div class="form-group">
                                            <label for="username">Açıklama</label>
                                            @Html.TextAreaFor(x => x.SliderDesc, new { @class = "form-control", row = "5", maxlength = "500", id = "username", type = "text", cols = "40", placeholder = "Kampanya açıklaması giriniz..." })
                                        </div>
                                        <div class="mt-3">
                                            <button id="btn_edit" onclick="edit_kampanya()" class="btn btn-primary btn-block waves-effect waves-light" type="submit">Kampanyayı Güncelle</button>
                                        </div>
                                    }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="~/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="~/assets/js/pages/form-element.init.js"></script>
    <script>
        function edit_kampanya() {
            var btn = document.getElementById("btn_edit");
            btn.innerText = "Kampanya Güncelleniyor...";
        }
    </script>
}