@model UoW.DOMAIN.Models.DokumanTipi

@{
    ViewData["Title"] = "InsertDocumentType";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">DÖKMÜMAN TİPİ OLUŞTUR</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">Döküman Tipi Oluştur</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-12 col-lg-10 col-xl-9">
                <div class="card overflow-hidden">
                    <div class="card-body pt-3">
                        <div class="p-3">
                            <h4 class="card-title">Döküman Tipi oluşturun!</h4>
                            <p class="card-title-desc">
                                Dökümanlarınızı daha rahat yönetmek ve kullanmak için marka ekleyin. Döküman tiplerinizin pozisyonlarını belirtilen seçeneklerden birini giriniz. Aksi takdirde istediğiniz döküman görüntülenmez. <strong><em>Marka, Varsayılan, Hakkımızda</em></strong>
                            </p>
                            <div class="p-2">
                                @using (Html.BeginForm("InsertDocumentType", "Document", FormMethod.Post))
                                {
                                  
                                    <div class="form-group">
                                        <label for="username">Döküman Tip Adı</label>
                                        @Html.TextBoxFor(x => x.TipAdi, new { @class = "form-control", maxlength = "45", id = "username", autocomplete = "off", placeholder = "Döküman Tip adı giriniz..." })
                                        <label class="text-danger">@Html.ValidationMessageFor(x => x.TipAdi)</label>
                                    </div>

                                    <div class="form-group">
                                        <label for="username">Pozisyon</label>
                                        @Html.TextBoxFor(x => x.Pozisyon, new { @class = "form-control", maxlength = "345", id = "username", type = "text", cols = "40", row = "3", placeholder = "Pozisyon giriniz..." })
                                    </div>
                                    <div class="mt-3">
                                        <button id="btn_insert" onclick="insert_tip()" class="btn btn-primary btn-block waves-effect waves-light" type="submit">Döküman Tipi Oluştur</button>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts{
    <script src="https://uploads.bayi.kiracelektrik.com.tr/admin/assets/libs/bootstrap-maxlength/bootstrap-maxlength.min.js"></script>
    <script src="https://uploads.bayi.kiracelektrik.com.tr/admin/assets/libs/bs-custom-file-input/bs-custom-file-input.min.js"></script>
    <script src="https://uploads.bayi.kiracelektrik.com.tr/admin/assets/js/pages/form-element.init.js"></script>
    <script>

        $(document).ready(function () {

            setTimeout(function () {
                $('label[class=text-danger]').delay(500).fadeOut();
            }, 3000);

        });

        function insert_tip() {
            window.setTimeout(function () {
                $("#btn_insert").attr("disabled", true);
            }, 500);
            var btn = document.getElementById("btn_insert");
            btn.innerText = "Döküman Tipi Oluşturuluyor...";
        }
    </script>
}