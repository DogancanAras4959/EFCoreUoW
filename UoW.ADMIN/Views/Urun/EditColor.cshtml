@model UoW.DOMAIN.Models.Renk

@{
    ViewData["Title"] = "CreateNewColor";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles{
    <link href="~/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="~/assets/libs/bootstrap-colorpicker/css/bootstrap-colorpicker.min.css" rel="stylesheet" type="text/css">
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">

                        <h4 class="card-title">Renk Değiştir</h4>
                        <p class="card-title-desc">
                            Ürünlerin için Renklerini düzenle
                        </p>
                        <form action="#">
                            <div class="form-group">
                                <input class="form-control" placeholder="Renk adı giriniz(Zorunlu Değildir)." value="@Model.RenkAdi" />
                            </div>
                            <div class="form-group">
                                <label>Rengini seç</label>
                                <div class="input-group colorpicker-default" title="Using format option">
                                    <input type="text" class="form-control input-lg" value="@Model.RenkKodu" />
                                    <span class="input-group-append">
                                        <span class="input-group-text colorpicker-input-addon"><i></i></span>
                                    </span>
                                </div>
                            </div>
                            <button class="btn btn-primary btn-block btn-sm" type="submit">Rengi Düzenle</button> <a class="btn btn-danger btn-sm btn-block" href="@Url.Action("RemoveColor","Urun", new { ColorID = Model.ID })">Rengi Sil</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="~/assets/libs/select2/js/select2.min.js"></script>
    <script src="~/assets/libs/bootstrap-colorpicker/js/bootstrap-colorpicker.min.js"></script>
    <script src="~/assets/js/pages/form-advanced.init.js"></script>

}