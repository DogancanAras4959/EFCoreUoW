@using UoW.DOMAIN.Models
@model UoW.DOMAIN.Models.Bayi
@{
    ViewData["Title"] = "TradeWithCredit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    BayiTicari bt = new BayiTicari();
    bt = ViewBag.BayiTicari;

    Yetkililer y = new Yetkililer();
    y = ViewBag.Yetkili;
}

    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">KREDİLİ TİCARET BAŞVURUSU</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("SellerDetail","Bayi", new { ID = ViewBag.ID })">Bayi Hesabı</a></li>
                            <li class="breadcrumb-item active">Kredili Ticaret Başvurusu</li>
                        </ol>
                    </div>

                </div>
            </div>
        </div>
        <!-- end page title -->

        <div class="row">
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-body">
                        <div class="media">
                            <img src="https://admin.kiracelektrik.com.tr/files/uploads/profil/@Model.Logo" alt="" class="avatar-sm mr-4">

                            <div class="media-body overflow-hidden">
                                <h5 class="text-truncate font-size-15">#@Model.UyeNo | @Model.BayiAdi</h5>
                                <p class="text-muted"><span style="font-weight:bold">@Model.musteriGrubu.GrubAdi</span> Müşteri Grubu'nun ürünlerine, @Model.musteriGrubu.Aciklama</p>
                            </div>
                        </div>

                        <h5 class="font-size-15 mt-4">Bayi Bilgileri:</h5>

                        <p class="text-muted"><span style="font-weight:bold">@Model.BayiAdi</span> adlı bayinin bilgileri, kredili ticaret başvurusu gerçekleştirmek için eksiksiz ve doğru düzenlenmiş olmalıdır. Başvuru yapmadan önce de bilgilerinizi istediğiniz şekilde düzenleyebilir, hatalarınız var ise düzeltebilirsiniz.</p>

                        <div class="text-muted mt-4">
                            <p><i class="mdi mdi-chevron-right text-primary mr-1"></i> Risk Limiti - <span style="font-weight:bold">@Model.RiskLimiti</span></p>
                            <p>
                                <i class="mdi mdi-chevron-right text-primary mr-1"></i> Bayi Durumu - @if (Model.AktifMi == true)
                                {<span style="font-weight:bold; color:green;">Aktif</span> }
                                else
                                { <span style="font-weight:bold; color:red;">Pasif</span>}
                            </p>
                            <p>
                                <i class="mdi mdi-chevron-right text-primary mr-1"></i> Alt Bayi Hakkı - @if (Model.AltBayiHakki == true)
                                {<span style="font-weight:bold; color:green;">Var</span> }
                                else
                                { <span style="font-weight:bold; color:red;">Yok</span>}
                            </p>
                        </div>

                        <div class="row task-dates">
                            <div class="col-sm-6 col-6">
                                <div class="mt-4">
                                    <h5 class="font-size-14"><i class="bx bx-calendar mr-1 text-primary"></i> Oluşturulma Tarihi</h5>
                                    <p class="text-muted mb-0">@Model.EklenmeTarih.ToShortDateString() - @Model.EklenmeTarih.ToShortTimeString() </p>
                                </div>
                            </div>

                            <div class="col-sm-6 col-6">
                                <div class="mt-4">
                                    <h5 class="font-size-14"><i class="bx bx-calendar-check mr-1 text-primary"></i> Son Düzenlenme Tarihi</h5>
                                    <p class="text-muted mb-0">@Model.GuncellenmeTarih.ToShortDateString() - @Model.GuncellenmeTarih.ToShortTimeString()</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->

            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Yetkili Bilgileri</h4>

                        <div class="table-responsive">
                            <table class="table table-centered table-nowrap">
                                <tbody>
                                    <tr>
                                        <td style="width: 50px;"><img src="https://admin.kiracelektrik.com.tr/files/uploads/profil/@y.YetkiliFoto" class="rounded-circle avatar-xs" alt=""></td>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="text-dark">@y.YetkiliAdi</a></h5></td>
                                    </tr>
                                    <tr>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);">Telefon</a></h5></td>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="text-dark">@y.TelNo</a></h5></td>
                                    </tr>
                                    <tr>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);">Email</a></h5></td>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="text-dark">@y.Email</a></h5></td>
                                    </tr>
                                    <tr>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);">Kayıt</a></h5></td>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="text-dark">@y.EklenmeTarih.ToShortDateString() - @y.EklenmeTarih.ToShortTimeString()</a></h5></td>
                                    </tr>
                                    <tr>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);">Düzenleme</a></h5></td>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="text-dark">@y.GuncellenmeTarih.ToShortDateString() - @y.GuncellenmeTarih.ToShortTimeString()</a></h5></td>
                                    </tr>
                                    <tr>
                                        <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);">Durum</a></h5></td>
                                        @if (y.Durum == true)
                                        {
                                            <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="badge badge-primary font-size-11">Aktif</a></h5></td>
                                        }
                                        else
                                        {
                                            <td><h5 class="font-size-14 m-0"><a href="javascript::void(0);" class="badge badge-danger font-size-11">Pasif</a></h5></td>
                                        }


                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title mb-4">Online Bağlantı Başvurusu</h4>
                        <form method="post" action="@Url.Action("OnlineApplyCreditSeller","Islem")"></form>
                        @Html.HiddenFor(x => x.ID)
                        <div class="form-group row">

                            <div class="col-sm-12">
                                @Html.TextBoxFor(x => x.UyeNo, string.Empty, new { @class = "form-control", autocomplete = "off", placeholder = "Müşteri Numaranızı giriniz" })
                            </div>
                        </div>
                        <div class="form-group row">

                            <div class="col-sm-12">
                                @Html.TextBoxFor(x => x.UyeNo, string.Empty, new { @class = "form-control", autocomplete = "off", placeholder = "Müşteri Kodunuzu giriniz" })
                            </div>
                        </div>
                        <div class="mt-3">
                            <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Başvuru Yap</button>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <p>Firmanıza özel müşteri kodu ve müşteri numarasını "" bayisi tarafından gönderilen faturalar üzerinden bulabilirsiniz.</p>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-body">

                        <h5 class="font-size-15 mt-2">@bt.FirmaUnvani Ticari Bilgileri </h5>

                        <p class="text-muted"><span style="font-weight:bold">@bt.FirmaUnvani</span> adlı bayinin ticari bilgileri, kredili ticaret başvurusu gerçekleştirmek için eksiksiz ve doğru düzenlenmiş olmalıdır. Başvuru yapmadan önce de bilgilerinizi istediğiniz şekilde düzenleyebilir, hatalarınız var ise düzeltebilirsiniz.</p>

                        <div class="text-muted mt-4">
                            <div class="row">
                                <div class="col-sm-4">
                                    <p><i class="mdi mdi-chevron-right text-primary mr-1"></i> Vergi Dairesi - <span style="font-weight:bold">@bt.VergiDairesi</span></p>
                                    <p>
                                        <i class="mdi mdi-chevron-right text-primary mr-1"></i> Vergi No - <span style="font-weight:bold">@bt.VergiNo</span>
                                    </p>
                                    <p>
                                        <i class="mdi mdi-chevron-right text-primary mr-1"></i> Web Site Adresi <span style="font-weight:bold">@bt.WebSiteAdresi</span>
                                    </p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="mdi mdi-chevron-right text-primary mr-1"></i> Posta Kodu - <span style="font-weight:bold">@bt.PostaKodu</span></p>
                                    <p>
                                        <i class="mdi mdi-chevron-right text-primary mr-1"></i> Faks - <span style="font-weight:bold">@bt.Faks</span>
                                    </p>
                                    <p>
                                        <i class="mdi mdi-chevron-right text-primary mr-1"></i> Adres <span style="font-weight:bold">@bt.Adres</span>
                                    </p>
                                </div>
                                <div class="col-sm-4">
                                    <p><i class="mdi mdi-chevron-right text-primary mr-1"></i> Yetkili Telefon - <span style="font-weight:bold">@bt.MuhasebeMutabakatTel</span></p>
                                    <p>
                                        <i class="mdi mdi-chevron-right text-primary mr-1"></i> Yetkili Mail - <span style="font-weight:bold">@bt.MuhasebeMutabakatEmail</span>
                                    </p>
                                </div>
                            </div>

                        </div>

                        <div class="row task-dates">
                            <div class="col-sm-4 col-6">
                                <div class="mt-4">
                                    <h5 class="font-size-14"><i class="bx bx-calendar mr-1 text-primary"></i> IBAN-TL</h5>
                                    <p class="text-muted mb-0">@bt.IBanNoTL</p>
                                </div>
                            </div>

                            <div class="col-sm-4 col-6">
                                <div class="mt-4">
                                    <h5 class="font-size-14"><i class="bx bx-calendar-check mr-1 text-primary"></i> IBAN-USD</h5>
                                    <p class="text-muted mb-0">@bt.IBanNoUSD</p>
                                </div>
                            </div>

                            <div class="col-sm-4 col-6">
                                <div class="mt-4">
                                    <h5 class="font-size-14"><i class="bx bx-calendar-check mr-1 text-primary"></i> IBAN-EURO</h5>
                                    <p class="text-muted mb-0">@bt.IBanNoEUR</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- end col -->
        </div>
        <!-- end row -->

    </div>


