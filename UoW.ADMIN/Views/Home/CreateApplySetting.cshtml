@model UoW.DOMAIN.Models.BasvuruAyar
@{
    ViewData["Title"] = "CreateApplySetting";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">BAŞVURU AYARI OLUŞTUR</h4>
                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("Index","Home")">Yönetici Paneli</a></li>
                            <li class="breadcrumb-item active">Başvuru Ayarı Oluştur</li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-md-8 col-lg-6 col-xl-5">
                <div class="card overflow-hidden">                   
                    <div class="card-body pt-0">                      
                        <div class="p-2">
                            <form class="form-horizontal" id="form" enctype="multipart/form-data" action="@Url.Action("CreateApplySetting","Home")" method="post">                                              
                                <div class="form-group">
                                    <label for="userpassword">Başvuru Günlük Limit</label>
                                    @Html.TextBoxFor(x=> x.BasvuruLimitGunluk, new { @class="form-control", placeholder="Limit Belirle...", @maxlength=10, @type="text" })                                  
                                </div>
                                <div class="form-group">
                                    <label for="username">İşlem Yapan</label>
                                    @Html.DropDownList("KullaniciID", (SelectList)ViewBag.KullaniciID, "Kullanıcı Seçiniz", new { @class = "form-control", id = "KullaniciID" })
                                </div>
                                <div class="mt-3">
                                    <button id="btn_create" onclick="create_setting()" class="btn btn-primary btn-block waves-effect waves-light" type="submit">Ayar Oluştur</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function create_setting() {
        var btn = document.getElementById("btn_create");
        btn.innerText = "Başvuru Ayarı Oluşturuluyor...";
    }
</script>