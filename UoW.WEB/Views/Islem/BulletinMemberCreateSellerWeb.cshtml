@model UoW.DOMAIN.Models.Bulten
@{
    ViewData["Title"] = "BultenMemberCreate";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-12">
                <div class="page-title-box d-flex align-items-center justify-content-between">
                    <h4 class="mb-0 font-size-18">BÜLTENE KATIL</h4>

                    <div class="page-title-right">
                        <ol class="breadcrumb m-0">
                            <li class="breadcrumb-item"><a href="@Url.Action("SellerDetail","Bayi", new { ID = ViewBag.ID })">Bayi Hesabı</a></li>
                            <li class="breadcrumb-item active">Bültene Katıl</li>
                        </ol>
                    </div>

                </div>
                <div class="row justify-content-center">
                    <div class="col-md-8 col-lg-8 col-xl-8">
                        <div class="card overflow-hidden">
                            <div class="card-body pt-3">
                                <div class="p-3">
                                    <h4 class="card-title">Bülten oluştur!</h4>
                                    <p class="card-title-desc">
                                        Bültene kayıt olmak istiyorsanız aşağıda istenilen bilgileri eksiksiz doldurun!
                                    </p>
                                        @using (Html.BeginForm("BulletinMemberCreateSellerWeb", "Islem", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                        {
                                            @Html.HiddenFor(x => x.YetkiliID)
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Yetkili Adı</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.AdinizSoyadiniz, new { @class = "form-control", maxlength = "35", id = "username", autocomplete = "off", placeholder = "Adınızı Soyadınız..." })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Telefon No</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.TelefonNo, new { @class = "form-control", id = "username", maxlength = "13", autocomplete = "off", placeholder = "Telefon Numaranız..." })
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="example-text-input" class="col-md-2 col-form-label">Email Adresi</label>
                                                <div class="col-md-10">
                                                    @Html.TextBoxFor(x => x.EmailAdresi, new { @class = "form-control", id = "username", maxlength = "30", autocomplete = "off", placeholder = "Email Adresiniz..." })
                                                </div>
                                            </div>
                                            <div class="mt-3">
                                                <button class="btn btn-primary btn-block waves-effect waves-light" type="submit">Bültene Katıl</button>
                                            </div>
                                        }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


