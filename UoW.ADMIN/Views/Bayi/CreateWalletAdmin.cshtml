@model UoW.DOMAIN.Models.Cuzdan
@{
    ViewData["Title"] = "CreateWallet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="page-title-box d-flex align-items-center justify-content-between">
                <h4 class="mb-0 font-size-18">Cüzdan Oluşturun</h4>
                <div class="page-title-right">
                    <ol class="breadcrumb m-0">
                        <li class="breadcrumb-item"><a href="@Url.Action("SellerDetailsAdmin","Bayi",new { ID = ViewBag.ID })">Bayi Hesabı</a></li>
                        <li class="breadcrumb-item active">Cüzdan Oluştur</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-8 col-xl-8">
            <div class="card overflow-hidden">
                <div class="card-body pt-3">
                    <div class="p-2">

                        <p class="card-title-desc">
                            Bayi arayüzünde gerekli bilgiler ve veriler olmadan Alışveriş yapma veya bayinizle ilgili düzenlemelere erişemezsiniz. Cüzdan hesabınızı oluşturduktan sonra lütfen bayinizle ilgili ticari bilgilerinizi de oluşturun. Önünüze çıkan adımlarda önerilen düzenlemeleri gerçekleştirin
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-8 col-xl-8">
            <div class="card overflow-hidden">
                <div class="card-body pt-3">
                    <div class="p-3">
                        <h4 class="card-title">Cüzdan oluştur!</h4>
                        <p class="card-title-desc">
                            Cüzdan oluşturmak istiyorsanız aşağıda istenilen bilgileri eksiksiz doldurun!
                        </p>
                        @using (Html.BeginForm("CreateWallet", "Bayi", FormMethod.Post))
                        {      
                            <div class="form-group row">
                                <label for="example-text-input" class="col-md-2 col-form-label">Cüzdan Tipi</label>
                                <div class="col-md-10">
                                    @Html.TextBoxFor(x => x.CuzdanTipi, new { @class = "form-control", maxlength = "35", id = "username", autocomplete = "off", placeholder = "Cüzdan Tipi(örn: Şirket)..." })
                                </div>
                            </div>
                            <div class="form-group">
                                <button id="btn_insert" onclick="insert_cuzdan()" type="submit" class="btn btn-sm btn-block btn-success">Cüzdanı Oluştur</button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function insert_cuzdan() {
        var btn = document.getElementById("btn_insert");
        btn.innerText = "Cüzdan Oluşturuluyor...";
    }
</script>

